{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dodawanie faktury</h1>

    <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">Menu</a>
    <br><br>
    {{ form_start(form) }}

<div class="content-wrapper">
    <div class="container-fluid">

                <!--DODAWANIE FAKTUR-->
                <form>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Numer faktury</label>
                        <input type="form-controle" class="form-control" {{ saleInvoice.number }}>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Kotrahent</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Data</label>
                        <input type="date" class="form-control" {{ saleInvoice.data|date('Y-m-d') }}>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">ID tax</label>
                        <input type="form-controle" class="form-control" {{ saleInvoice.taxId }}>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Kwota netto</label>
                        <input type="form-controle" class="form-control" {{ saleInvoice.amountNetto }}>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Kwota brutto</label>
                        <input type="form-controle" class="form-control" {{ saleInvoice.amountBrutto }}>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">waluta</label>
                        <select class="form-control" id="exampleFormControlSelect1" {{ saleInvoice.currency }}>
                            <option>z≈Ç</option>
                            <option>euro</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Kwota netto w walucie</label>
                        <input type="form-controle" class="form-control" {{ saleInvoice.amountNettoCurrency }}>
                    </div>
                </form>
                <input class="btn btn-outline-success" type="submit" value="Dodaj" />
                 <a href="{{ path('saleinvoice_index') }}" class="btn btn-outline-dark">Anuluj</a>

            </div>
        </div>
    </div>



{% endblock %}
